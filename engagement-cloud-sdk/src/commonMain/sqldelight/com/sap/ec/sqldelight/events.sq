CREATE TABLE events (
  id TEXT PRIMARY KEY NOT NULL,
  type TEXT NOT NULL,
  timestamp INTEGER NOT NULL,
  json TEXT NOT NULL
);

CREATE INDEX id ON events(id);

selectAll:
SELECT json FROM events ORDER BY timestamp ASC;

insertEvent:
INSERT OR IGNORE INTO events (id, type, timestamp, json) VALUES (?, ?, ?, ?);

upsertEvent:
INSERT OR REPLACE INTO events (id, type, timestamp, json) VALUES (?, ?, ?, ?);

deleteAll:
DELETE FROM events;

deleteById:
DELETE FROM events WHERE id = ?;
